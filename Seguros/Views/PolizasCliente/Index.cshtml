@model IEnumerable<Seguros.Entities.Entities.PolizasCliente>

@{
    ViewBag.Title = "Polizas Cliente";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Poliza.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InicioCubrimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Activa)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poliza.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InicioCubrimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activa)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

</table>
