@model IEnumerable<Seguros.Entities.Entities.Poliza>

@{
    ViewBag.Title = "Polizas";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoCubrimientoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoRiesgoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MesesCobertura)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cubrimiento.NombreMostrar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Riesgo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MesesCobertura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
